extends ./layout/_layout.pug

block content
  
  section.search
    #map
    .home-caption
      h2 Real Conveyancers. Low Cost.
      p.lead No worries, we’ve got it covered!
      br
    //- home-caption
    .form
      .form-group.rounded
        //- label.rounded-top Search a property
        .input-search
